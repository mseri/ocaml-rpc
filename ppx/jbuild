(library
 ((name ppx_deriving_rpc)
  (public_name ppx_deriving_rpc)
  (synopsis "[@@deriving rpc]")
  (optional)
  (libraries (ppx_deriving ppx_deriving.runtime compiler-libs ocaml-migrate-parsetree ppx_tools_versioned.metaquot_405 rpclib.core))
  (preprocess (action (run ${lib:ppx_tools:rewriter} ${lib:ppx_tools:ppx_metaquot} -ppx "${lib:ppx_deriving:ppx_deriving} --as-ppx" ${<})))
 ))
